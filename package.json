{
  "name": "mr-chat-api",
  "version": "1.0.0",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec \"node --loader ts-node/esm src/server.ts\"",
    "build": "npm run clean && tsc && node post-build.mjs",
    "embed:swagger": "node embed-swagger.mjs",
    "prod-build": "rm -rf prod && npm run generate:swagger && npm run embed:swagger && tsup",
    "dev-start": "node dist/server.js",
    "start": "node prod/server.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "clean": "rm -rf dist",
    "clean-js": "find . -type f \\( -name '*.js' -o -name '*.js.map' -o -name '*.d.ts' \\) -delete",
    "prepare": "husky install",
    "generate": "npm run generate:swagger && npm run generate:types &&npm run embed:swagger",
    "generate:swagger": "tsx src/scripts/generate-swagger.mts",
    "generate:types": "openapi-typescript swagger.yaml -o src/types/api-types.ts"
  },
  "author": "Pranay Kumar Kodam",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "chalk": "^5.4.1",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "mongoose": "^8.13.2",
    "mysql2": "^3.14.0",
    "pg": "^8.14.1",
    "redis": "^4.7.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tsconfig-paths": "^4.2.0",
    "ua-parser-js": "^2.0.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^22.14.0",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^9.24.0",
    "husky": "^9.1.7",
    "mongoose-to-swagger": "^1.5.1",
    "nodemon": "^3.1.9",
    "openapi-typescript": "^7.6.1",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "yaml": "^2.7.1"
  }
}