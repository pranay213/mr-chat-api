{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "baseUrl": "./src",
    "paths": {
      "routes/*": [
        "routes/*"
      ],
      "controllers/*": [
        "controllers/*"
      ],
      "utils/*": [
        "utils/*"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "src"
  ]
}